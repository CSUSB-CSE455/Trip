<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.csusb.cse455.trip.ui.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_bg"
        android:src="@drawable/bg_opacity_gradient"/>

    <!-- Transparent layer -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <!-- Login username block -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />


        <!-- Header Block -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="64dp">

            <TextView
                android:id="@+id/logResetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:gravity="center"
                android:textSize="35dp"
                android:textColor="@color/white"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <!-- FIRSTNAME INPUT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/regFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/username_icon"
                    android:layout_marginBottom="-8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/username_icon"
                    android:background="@color/fullTransparent"
                    android:ems="10"
                    android:hint="First Name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingBottom="8dp"
                    android:paddingEnd="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/EditTextTheme" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/username_icon"
                    android:padding="3dp"
                    android:src="@drawable/username"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>

            <!-- Line 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/divider"
                android:layout_marginLeft="55dp">

            </LinearLayout>

            <!-- LASTNAME INPUT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/regLastName"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/username_icon2"
                    android:layout_toEndOf="@+id/username_icon2"
                    android:layout_alignBottom="@+id/username_icon2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fullTransparent"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"
                    android:paddingRight="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="-8dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/EditTextTheme"
                    android:ems="10"
                    android:hint="Last Name"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPersonName"/>

                <!-- ICON -->
                <ImageView
                    android:id="@+id/username_icon2"
                    android:padding="3dp"
                    android:src="@drawable/username"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>


            <!-- Line 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/divider"
                android:layout_marginLeft="55dp">

            </LinearLayout>


            <!-- EMAIL INPUT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/regEmail"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/email_icon"
                    android:layout_toEndOf="@+id/email_icon"
                    android:layout_alignBottom="@+id/email_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fullTransparent"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"
                    android:paddingRight="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="-8dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/EditTextTheme"
                    android:ems="10"
                    android:hint="@string/prompt_email"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"/>

                <!-- ICON -->
                <ImageView
                    android:id="@+id/email_icon"
                    android:padding="3dp"
                    android:src="@drawable/email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>


            <!-- Line 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/divider"
                android:layout_marginLeft="55dp">

            </LinearLayout>

            <!-- PASSWORD INPUT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/regPassword"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/password_icon"
                    android:layout_toEndOf="@+id/password_icon"
                    android:layout_alignBottom="@+id/password_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fullTransparent"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"
                    android:paddingRight="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="-8dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/EditTextTheme"
                    android:ems="10"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                <!-- ICON -->
                <ImageView
                    android:id="@+id/password_icon"
                    android:padding="3dp"
                    android:src="@drawable/password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>


            <!-- Line 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/divider"
                android:layout_marginLeft="55dp">

            </LinearLayout>

            <!-- USERNAME INPUT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/regRePassword"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/password_icon2"
                    android:layout_toEndOf="@+id/password_icon2"
                    android:layout_alignBottom="@+id/password_icon2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fullTransparent"
                    android:paddingLeft="12dp"
                    android:paddingStart="12dp"
                    android:paddingRight="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="-8dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/textSize"
                    android:theme="@style/EditTextTheme"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                <!-- ICON -->
                <ImageView
                    android:id="@+id/password_icon2"
                    android:padding="3dp"
                    android:src="@drawable/password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"/>

            </RelativeLayout>


            <!-- Line 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/divider"
                android:layout_marginLeft="55dp">

            </LinearLayout>


            <Button
                android:id="@+id/regBtn"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/button"
                android:textAllCaps="false"
                android:text="Register"
                android:textSize="@dimen/textButton"
                android:textColor="@color/colorButtonText"
                android:padding="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="36dp"/>


        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/backBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_arrow_back_white_24px" />
</RelativeLayout>
