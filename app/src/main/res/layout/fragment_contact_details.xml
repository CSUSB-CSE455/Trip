<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csusb.cse455.trip.ui.NotificationDetailsFragment">

    <TextView
        android:id="@+id/item_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="First"
        />

    <TextView
        android:id="@+id/item_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_first_name"
        android:layout_toEndOf="@+id/item_first_name"
        android:layout_alignTop="@+id/item_contact_thumb"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Last"
        />

    <TextView
        android:id="@+id/item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_first_name"
        android:layout_toRightOf="@+id/item_contact_thumb"
        android:layout_toEndOf="@+id/item_contact_thumb"
        android:layout_alignBottom="@+id/item_contact_thumb"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#8f8f8f"
        android:text="contact@email.com"
        />

    <Button
        android:id="@+id/btn_edit"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/item_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="@dimen/textButton"
        android:textColor="@color/colorButtonText"/>
</RelativeLayout>