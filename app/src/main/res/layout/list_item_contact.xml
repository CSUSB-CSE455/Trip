<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:id="@+id/item_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/item_contact_thumb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#a1a1a1"
                android:textSize="28sp"
                android:textAlignment="center"
                android:background="@drawable/contact_thumb_circle"
                android:text="A"/>

            <TextView
                android:id="@+id/item_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_contact_thumb"
                android:layout_toEndOf="@+id/item_contact_thumb"
                android:layout_alignTop="@+id/item_contact_thumb"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="First"
                />

            <TextView
                android:id="@+id/item_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_first_name"
                android:layout_toEndOf="@+id/item_first_name"
                android:layout_alignTop="@+id/item_contact_thumb"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Last"
                />

            <TextView
                android:id="@+id/item_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_first_name"
                android:layout_toRightOf="@+id/item_contact_thumb"
                android:layout_toEndOf="@+id/item_contact_thumb"
                android:layout_alignBottom="@+id/item_contact_thumb"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#8f8f8f"
                android:text="contact@email.com"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
